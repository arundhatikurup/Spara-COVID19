<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/vlogobg"
        android:src="@drawable/vlogo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="Thank you Dawn! It's nice to meet you."
            android:textSize="24sp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Help us learn more about you"
            android:textSize="18sp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:textColor="#333"
            android:gravity="start"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="28dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="48dp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Height (in)"
                android:background="@drawable/textinputborder"
                android:paddingLeft="16dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Weight (lbs)"
                android:background="@drawable/textinputborder"
                android:paddingLeft="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="28dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="48dp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Age"
                android:background="@drawable/textinputborder"
                android:paddingLeft="16dp"
                />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="Ethnicity"
                android:background="@drawable/textinputborder"
                android:paddingLeft="16dp"
                />
        </LinearLayout>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="Choose password"
            android:inputType="textPassword"
            android:background="@drawable/textinputborder"
            android:paddingLeft="16dp"
            />
        <EditText
            android:layout_marginTop="12dp"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="Confirm password"
            android:background="@drawable/textinputborder"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/logintextview"
        android:gravity="center"
        android:id="@+id/learn_more_continue"
        android:layout_marginBottom="40dp"
        android:text="CONTINUE"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"

        />


</LinearLayout>
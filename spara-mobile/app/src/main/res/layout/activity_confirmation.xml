<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">
    <ImageView
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/vlogobg"
        android:src="@drawable/vlogo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:text="@string/confirmation"
            android:textSize="24sp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="48dp"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Is this correct?"
            android:textSize="24sp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="48dp"
            android:textColor="#333333"
            android:gravity="start"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_weight="1"
        android:id="@+id/confirmation_screen_back"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/logintextview"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:text=" No, go back"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/confirmation_screen_continue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/logintextview"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:text="Yes, continue"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"/>


    </LinearLayout>
</LinearLayout>